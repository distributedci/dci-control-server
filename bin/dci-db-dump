RED='\033[0;31m'
NOCOLOR='\033[0m'

if [ ! -f "dci-control-server.spec" ]; then
    echo -e "${RED}You seems to be in the wrong directory"
    echo -e "Execute this script from the root of dci-control-server with ./bin/${0##*/}${NOCOLOR}"
    exit 1
fi

docker exec -it dcidevenv_db_1 sh -c ". /opt/rh/rh-postgresql94/enable && pg_dumpall --clean --file='/tmp/dbdump.sql'"
docker cp dcidevenv_db_1:/tmp/dbdump.sql ./tests/data/dbdump.sql
docker exec -it dcidevenv_db_1 rm /tmp/dbdump.sql